<div class="button__back"><a href="/">Back to discussions</a></div>

<div class="discussion__title">
    <h1>{{title}}</h1>
    <div class="discussion__message">{{message}}</div>
</div>


{{#each question}}
    <a href="/discussions/{{../this.id}}/{{this.id}}">
        <div class="question__posted">
            <div class="question__title">
                <h2>{{this.question}}</h2>
            </div>
            <div class="button_answer">Give an answer</div>

            <div class="answer">
                <form class="form-a" action="" method="post">
                    <textarea name="answer" placeholder="Answer" class="answer__text"></textarea>
                    <input type="text" name="questionId" hidden="hidden" value="{{this.id}}">
                    <input type="submit" value="Explain" class="button-a">
                </form>
            </div>
            <form action="" method="post" class="form__del">
                <input type="text" name="del" value="{{this.id}}" hidden="hidden">
                <input type="submit" value="Del" class="del">
            </form>
        </div>
    </a>
    <div class="line-gray"></div>
{{/each}}


<div class="button__ask">Ask a question</div>

<div class="question">
    <form action="" method="post">
        <textarea name="question" placeholder="Question" class="ask__text"></textarea>
        <input type="submit" value="Ask" class="button">
    </form>
</div>